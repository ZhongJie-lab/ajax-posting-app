<% if post.liked_users.any? %>
  <%= post.liked_users.map{ |u| u.display_name }.join(",") %> 点了赞
<% end %>

<% if current_user %>
  <% if post.find_like(current_user) %>
    <%= link_to unlike_post_path(post), :method => :post, :remote => true do %>
      <i class="fa fa-heart " aria-hidden="true" style="color: #e3654c"></i>
    <% end %>
  <% else %>
    <%= link_to like_post_path(post), :method => :post, :remote => true do %>
      <i class="fa fa-heart-o " aria-hidden="true" style="color: #e3654c"></i>
    <% end %>
  <% end %>
<% end %>
